generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Venda {
  id String @id @default(uuid()) @map("id")
  nomeProduto String @db.VarChar(200) @map("nome_produto")
  valorProduto Decimal @db.Money @default(0.0) @map("valor_venda")
  quantidadeComprada Int @map("qtd_comprada")
  dataVenda DateTime @default(now()) @map("dt_venda")
  @@map("tb_venda")
}
